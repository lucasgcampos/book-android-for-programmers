<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/color_dialog_grid_layout"
    android:orientation="vertical"
    android:columnCount="2"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:useDefaultMargins="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/alpha_text_view"
        android:layout_row="0"
        android:layout_column="0"
        android:text="@string/label_alpha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|right" />

    <SeekBar
        android:id="@+id/alpha_seek_bar"
        android:max="255"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal" />

    <TextView
        android:id="@+id/red_text_view"
        android:layout_row="1"
        android:layout_column="0"
        android:text="@string/label_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|right" />

    <SeekBar
        android:id="@+id/red_seek_bar"
        android:max="255"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal" />

    <TextView
        android:id="@+id/green_text_view"
        android:layout_row="2"
        android:layout_column="0"
        android:text="@string/label_green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|right" />

    <SeekBar
        android:id="@+id/green_seek_bar"
        android:max="255"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal" />

    <TextView
        android:id="@+id/blue_text_view"
        android:layout_row="3"
        android:layout_column="0"
        android:text="@string/label_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|right" />

    <SeekBar
        android:id="@+id/blue_seek_bar"
        android:max="255"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal" />

    <View
        android:id="@+id/color_view"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/color_view_height"
        android:layout_gravity="fill_horizontal"/>


</GridLayout>